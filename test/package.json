{
  "name": "vite-react-test-suite",
  "version": "1.0.0",
  "description": "Comprehensive test suite for diagnosing production build issues",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:full": "node scripts/run-full-test-suite.js",
    "test:build-verification": "node scripts/build-verification.js",
    "test:component-rendering": "vitest run --config vitest.component.config.ts",
    "test:dev-vs-preview": "node scripts/dev-vs-preview-comparison.js",
    "install-deps": "npm install"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.7",
    "vitest": "^4.0.7"
  }
}
